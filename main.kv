#:kivy 1.10.0
	
<ScreenManagement>: 
    MainScreen:
   
    LoadScreen:
        
    UnlockScreen:
        
	
<MainScreen>:
    name: 'main'
    BoxLayout:
        Button:
            text: 'Load'
            on_press: root.manager.current = 'load'
        Button:
            text: 'Unlock'
            on_press: root.manager.current = 'unlock'

<LoadScreen>:
    name: 'load'
        
    BoxLayout:
        orientation: 'vertical'
        KivyCamera:
            id: scanner
        BoxLayout: 
            Button: 
                text: 'Start Scanning'
                size_hint: 0.5, 1
                on_press: root.load_scanner()
            Button: 
                text: 'End scanning'
                on_release: root.exit_scan()

<UnlockScreen>:
    name: 'unlock'
    BoxLayout:
        Button:
            text: 'Back'
            on_press: root.manager.current = 'main'
